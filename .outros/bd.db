CREATE DATABASE IF NOT EXISTS esp_monitor;
USE esp_monitor;

CREATE TABLE IF NOT EXISTS dht (
    id INT AUTO_INCREMENT PRIMARY KEY,
    temperatura FLOAT NOT NULL,
    umidade FLOAT NOT NULL,
    datahora DATETIME NOT NULL
);

CREATE TABLE IF NOT EXISTS dht_estado_atual (
    id INT PRIMARY KEY DEFAULT 1, -- Garante que sรณ exista a linha 1
    temperatura FLOAT NOT NULL,
    umidade FLOAT NOT NULL,
    datahora DATETIME NOT NULL
);